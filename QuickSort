def quick(arr):
    if len(arr)<=1:
        return arr
    pivot = arr[len(arr)//2]
    left=[x for x in arr if x < pivot]
    middle=[x for x in arr if x == pivot]
    right=[x for x in arr if x >pivot]
    return quick(left)+quick(middle)+quick(right)
arr=[4,2,3,1]
sorted=quick(arr)
print(" ",sorted)
